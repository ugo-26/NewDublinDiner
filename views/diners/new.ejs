<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Dublin diner/Restaurant</h1>
    <div class="col-6 offset-3">
    <form action="/diners" method="POST" novalidate class="validated-form">
        <div>
            <label for="title">Name</label>
            <input class="form-control" type="text" id="title" name="diner[title]" required>
            <div class="valid-feedback">
                valid input!
            </div>
        </div>
        <div>
            <label for="location">Location</label>
            <input class="form-control" type="text" id="location" name="diner[location]" required>
            <div class="valid-feedback">
                valid input!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">Food Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">â‚¬</span>
                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                    aria-describedby="price-label" name="diner[price]" required>
            </div>
            <div class="valid-feedback">
                valid input!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="text" id="image" name="diner[image]" required>
            <div class="valid-feedback">
                valid input!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
            <div class="valid-feedback">
                valid input!
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-warning">Add Dublin Diner/Restaurant</button>
        </div>
    </form>

    